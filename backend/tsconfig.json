{
  "compilerOptions": {
    "target": "es6",                                 
    "module": "commonjs",                               
    "rootDir": "./src",                                  
    "outDir": "./dist",
    "moduleResolution": "node",                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist/**/*"
  ]
}
